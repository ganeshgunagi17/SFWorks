<apex:page controller="ShowContacts" readonly="true">
  <apex:form >
    <apex:pageBlock >
            <apex:pageBlockTable value="{!ContactList}" var="cont">
                
                <apex:column headerValue="Contact Name" value="{!cont.Name}"/>
                <apex:column headerValue="Contact ID" value="{!cont.ID}"/>
            </apex:pageBlockTable>
        </apex:pageBlock>
    </apex:form>
              
</apex:page>